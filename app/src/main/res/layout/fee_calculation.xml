<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="13dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="수수료 계산기"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:text="거래 금액 입력"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:hint="금액을 입력하세요"
                    android:inputType="number"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/inputCoupon"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="쿠폰"
                    android:inputType="number"></EditText>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_clear_24"></ImageButton>
            </LinearLayout>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/addBtnEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력창 추가"
            android:textStyle="bold"></android.widget.Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="수수료 할인 "
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/pcsale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PC방 할인(30%)"
                    android:textStyle="bold"></CheckBox>

                <CheckBox
                    android:id="@+id/topsale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="TOPCLASS 할인(20%)"
                    android:textStyle="bold"></CheckBox>

            </LinearLayout>


            <!-- 계산 결과 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="결과"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원래 금액:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 수수료: "
                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/resultTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="16dp"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 계산 버튼 -->
            <android.widget.Button
                android:id="@+id/resultBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="계산하기"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
